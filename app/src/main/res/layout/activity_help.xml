                android:layout_marginStart="20dp"
                android:onClick="mangandcom"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView322102cwssdx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
