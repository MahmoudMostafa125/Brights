<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:id="@+id/mRelative"

    android:layout_weight="1">

    <ImageView
        android:id="@+id/imagereview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/logore" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imagereview"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/namereview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"

                android:text="Zed Lee" />


        </LinearLayout>

        <TextView
            android:id="@+id/datereview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="17 Aug"
            android:layout_marginTop="5dp"
            android:textSize="10sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginStart="10dp"

            android:layout_marginTop="5dp"
            android:numStars="5"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="25dp" />

        <TextView
            android:id="@+id/txtreviewnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="good"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="40dp" />
    </LinearLayout>


</RelativeLayout>